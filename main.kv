#: set BG_COLOR rgba('#ececec')
#: set MAIN_COLOR rgba('#0fafff')
#: set SECONDARY_COLOR rgba('#0f87ff')
#: set DECORATION_COLOR [0.031, 0.768, 0.549, 0.2]
#: set DECORATION_COLOR_NOALPHA rgba('#08c48c')
#: set ERROR_COLOR rgba('#c92a1e')
